public class Pokemon {
    private String name;
    private int level;
    private int id;
    private int healthPoints;
    private int attackPoints;
    private int defensePoints;
    private int speedPoints;
    private String type;
    private String statusCondition;
    private String move1;
    private String move2;
    private String move3;
    private String move4;

    public Pokemon(String name, int level, int id, int healthPoints, int attackPoints, int defensePoints, int speedPoints, String type, String statusCondition, String move1, String move2, String move3, String move4) {
        this.name = name;
        this.level = level;
        this.id = id;
        this.healthPoints = healthPoints;
        this.attackPoints = attackPoints;
        this.defensePoints = defensePoints;
        this.speedPoints = speedPoints;
        this.type = type;
        this.statusCondition = statusCondition;
        this.move1 = move1;
        this.move2 = move2;
        this.move3 = move3;
        this.move4 = move4;